<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.sdm.sportfit.app.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center">

        <!-- Primera columna -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/train_review_img_size"
                        android:layout_height="@dimen/train_review_img_size"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:id="@+id/train_review_img_sport"
                        android:src="@drawable/ic_correr" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/train_review_type"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correr"
                            android:textSize="22sp"
                            android:id="@+id/train_review_sport" />
                    </LinearLayout>

                </LinearLayout> <!-- Deporte -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/train_review_img_size"
                        android:layout_height="@dimen/train_review_img_size"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_duracion" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/train_review_duration"
                            android:textStyle="bold" />

                        <Chronometer
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/train_review_chronometer"
                            android:textSize="22sp"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                </LinearLayout> <!-- Duracion -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/train_review_img_size"
                        android:layout_height="@dimen/train_review_img_size"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_promedio" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/train_review_avgspeed"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:id="@+id/train_review_avg_speed"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="km/h"
                                android:id="@+id/train_review_avg_speed_units"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout> <!-- Velocidad media -->

            </LinearLayout>

        </LinearLayout> <!-- Fin primera columna -->

        <!-- Segunda columna-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/train_review_img_size"
                        android:layout_height="@dimen/train_review_img_size"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_quemado" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/train_review_calories"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:id="@+id/train_review_calories"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="kcal"
                                android:id="@+id/train_review_calories_units"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout> <!-- Calorias -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/train_review_img_size"
                        android:layout_height="@dimen/train_review_img_size"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_distancia" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/train_review_distance"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="71.21"
                                    android:id="@+id/train_review_distance"
                                    android:textSize="22sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="km"
                                    android:id="@+id/train_review_distance_units"
                                    android:textSize="14sp" />

                            </LinearLayout>

                    </LinearLayout>

                </LinearLayout> <!-- Distancia -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/train_review_img_size"
                        android:layout_height="@dimen/train_review_img_size"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_promedio" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/train_review_avgpace"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.5"
                                android:id="@+id/train_review_avg_pace"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="min/km"
                                android:id="@+id/train_review_avg_pace_units"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout> <!-- Ritmo promedio-->

            </LinearLayout>

        </LinearLayout> <!-- Fin segunda columna -->

    </LinearLayout> <!-- Fin datos -->

    <com.google.android.gms.maps.MapView
        android:id="@+id/fragmenttrain_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
